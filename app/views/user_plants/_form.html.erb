<div class="container"><br>
  <%= simple_form_for [@api_plant, @user_plant] do |f| %>
    <div class="form-inputs">
      <%= f.input :nickname %>
      <%= f.input :photo, as: :file, required: true %>
      <%= f.input :plant_id, :as => :hidden %>
    </div>
    <div class="form-actions">
      <br><br>
      <div class="d-flex flex-column align-items-center">
        <%= f.submit "ADD YOUR NEW PLANT", class: "btn formbtn btn-block" %>
        <%= link_to "Oh no, it's the wrong plant", plants_path, class:"linkform" %><br/>
      </div>
    </div>
  <% end %>
</div>
